{
  "private": true,
  "name": "flowtip-packages",
  "scripts": {
    "build": "npm run build:compile && npm run build:types",
    "build:compile": "npm run build:clean && npx lerna exec --ignore examples -- 'rollup --config ${LERNA_ROOT_PATH}/rollup.config.js'",
    "build:flowtype": "npx lerna exec --ignore examples -- 'for file in $(find ./types -name *.d.ts -type f | sed \"s|^\\./types||\"); do mkdir -p `dirname ./${file}` && flowgen ./types/${file} -o .${file/.d.ts/.flow.js}; done;'",
    "build:types": "npx lerna exec --ignore examples -- 'tsc --emitDeclarationOnly'",
    "build:clean": "npx lerna exec --ignore examples rimraf ./lib ",
    "format": "npx prettier --write '{,!(coverage)/**/}{*.{tsx,ts,html,md,yml},!(package-lock).json}'",
    "test:format": "npx prettier --check '{,!(coverage)/**/}{*.{tsx,ts,html,md,yml},!(package-lock).json}'",
    "prepare": "npx lerna bootstrap && npm run build",
    "test": "npm run test:format && npm run test:lint && npm run test:spec && npm run test:types",
    "test:lint": "NODE_ENV=test npx eslint .",
    "test:spec": "NODE_ENV=test npx jest --runInBand=${SPEC_SERIAL:-$CI} --coverage=${SPEC_COVERAGE:-$CI}",
    "test:spec:watch": "NODE_ENV=test npm run spec -- --watch",
    "test:types": "NODE_ENV=test npx lerna exec -- 'tsc --noEmit --project .'",
    "storybook": "start-storybook -p 8080 -c packages/examples"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.4",
    "@babel/plugin-proposal-class-properties": "7.3.4",
    "@babel/plugin-transform-modules-commonjs": "7.2.0",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@storybook/addon-actions": "^4.1.13",
    "@storybook/addon-info": "^4.1.13",
    "@storybook/addon-knobs": "^4.1.13",
    "@storybook/addon-links": "^4.1.13",
    "@storybook/addon-storysource": "^4.1.13",
    "@storybook/react": "^4.1.13",
    "@types/react": "16.8.5",
    "@types/react-dom": "^16.8.2",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-knobs": "^4.0.1",
    "@types/storybook__addon-links": "^3.3.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.11",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.1.0",
    "babel-plugin-module-resolver": "3.2.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.10.0",
    "eslint": "5.14.1",
    "eslint-config-metalab": "10.0.0",
    "eslint-plugin-prettier": "3.0.1",
    "flowgen": "1.5.8",
    "jest": "24.1.0",
    "lerna": "3.13.1",
    "ncp": "2.0.0",
    "prettier": "1.16.4",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-resize-observer": "^1.1.1",
    "regenerator-runtime": "0.13.1",
    "rimraf": "2.6.3",
    "rollup": "1.2.4",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.1",
    "rollup-plugin-node-resolve": "4.0.1",
    "styled-components": "^4.1.3",
    "typescript": "3.3.3333"
  },
  "devEngines": {
    "node": "9",
    "npm": "5"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "lib/"
    ],
    "coveragePathIgnorePatterns": [
      "__test__/"
    ],
    "testMatch": [
      "**/*.test.tsx"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "setupFiles": [
      "./__test__/setup.js"
    ],
    "testURL": "http://localhost"
  },
  "browserslist": [
    "last 2 versions",
    "safari >= 7",
    "ie >= 10",
    "> 1%"
  ],
  "dependencies": {
    "@martin_hotell/rex-tils": "^2.1.1"
  }
}
