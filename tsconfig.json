{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "*": ["packages/*"]
    },
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6"
  },
  "exclude": ["node_modules"]
}
